<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:gravity="top" android:height="1000dp" android:width="1000dp">
                <rotate
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:fromDegrees="90" android:pivotX="50%" android:pivotY="50%" android:visible="true">

                    <shape>
                        <gradient android:type="linear" android:startColor="@color/claroG4" android:endColor="@color/white" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>